@model WebBookmarkUI.Models.SearchUserInfo

<link href="~/assets/login/user.css" rel="stylesheet" />
<script>
    var showUserCreateGroupListURL = "@Url.Action("../ShowGroup/ShowUserCreateGroupList")";
    var showUserGroupListAndPassURL = "@Url.Action("../ShowGroup/ShowUserGroupListAndPass")";
    

</script>

@if(Model!=null)
{
    <div class="aw-mod aw-user-detail-box">
    <div class="mod-head">
        @if (!string.IsNullOrEmpty(Model.UserImagURL))
        {
             <img src='@Url.Content(Model.UserImagURL)' width="100" height="100">
        }
        else
        {
            <img src='http://s.amazeui.org/media/i/demos/bw-2014-06-19.jpg?imageView/1/w/200/h/200/q/80' width="100" height="100">
        }
        <div>
            <h1>@Model.UserName /@Model.UserEmail &nbsp;&nbsp;&nbsp;
            @if(Model.UserInfoID != WebBookmarkUI.UILoginHelper.GetUIDInCookie(Request))
            {
                    if(Model.IsFollow)
                    {
                            <button data-id='@Model.UserInfoID' class="am-btn am-btn-primary" id="unFollowUser"><span>取消关注</span></button>
                    }
                    else
                    {
                        <button class="am-btn btn-success" data-id='@Model.UserInfoID' id="followUser"><span>关注</span></button>
                    }
            }
            </h1>
        </div>
       
        <p>简介：@(!string.IsNullOrEmpty(Model.UserInfoComment) ? Model.UserInfoComment : "此人太懒，都不给自己写个简介。")</p>
        <p>注册时间：@Model.CreateTime</p>
      

        <p class="text-color-999"></p>
        <p class="aw-user-flag"></p>
    </div>

    <div class="mod-footer">
        <div class="am-tabs" data-am-tabs="">
            <ul class="am-tabs-nav am-nav am-nav-tabs aw-nav-tabs">
                <li class="am-active"><a href="#" id="allfolder" data-uid='@Model.UserInfoID'>公开书签夹 <span id="loadfolder"></span></a></li>
                <li class=""><a href="#" id="follower" data-uid='@Model.UserInfoID'>关注了 <span id="loadfollow"></span></a></li>
                <li class=""><a href="#" id="befollwed" data-uid='@Model.UserInfoID'>关注者 <span id="loadbefollwed"></span></a></li>
                <li class=""><a href="#" id="groupinfo" data-uid='@Model.UserInfoID'>他的群组 <span id="loadgroupinfo"></span></a></li>
                <li class=""><a href="#" id="groupuser" data-uid='@Model.UserInfoID'>他加入的群组 <span id="loadgroupuser"></span></a></li>
            </ul>

            <div class="am-tabs-bd aw-user-center-tab" style="touch-action: pan-y; -webkit-user-select: none; -webkit-user-drag: none; -webkit-tap-highlight-color: rgba(0, 0, 0, 0);">
                <div class="am-active am-in" id="overview">
                   
                </div>
            </div>
        </div>
    </div>
</div>
}


