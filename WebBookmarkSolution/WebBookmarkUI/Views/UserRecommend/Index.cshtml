@model List<WebBookmarkUI.Models.SearchUserInfo>
<div class="am-g" style="margin-top:0.5%">
    <div class="am-u-sm-12">
        <div class="aw-mod aw-mod-search-result">
            <div class="mod-body">
                <div class="tab-content">
                    <div class="tab-pane active">
                        <div id="search_result">

                            @if (Model != null)
                            {
                                var loginUid = WebBookmarkUI.UILoginHelper.GetUIDFromHttpContext(this.Context);

                                foreach (var userInfo in Model)
                                {
                                    <div class="aw-item">

                                        @if (!string.IsNullOrEmpty(userInfo.UserImagURL))
                                        {
                                            <a href='@Url.Content(@userInfo.UserImagURL)' class="aw-user-img" data-id=""><img src='@Url.Content(@userInfo.UserImagURL)' alt="" width="60" height="60"></a>
                                        }
                                        else
                                        {
                                            <a href='http://s.amazeui.org/media/i/demos/bw-2014-06-19.jpg?imageView/1/w/200/h/200/q/80' class="aw-user-img"><img src='http://s.amazeui.org/media/i/demos/bw-2014-06-19.jpg?imageView/1/w/200/h/200/q/80' alt="" width="50" height="50"></a>
                                        }

                                        @if (userInfo.UserInfoID != loginUid)
                                        {
                                            if (!userInfo.IsFollow)
                                            {
                                                <button id="searchuserfollowuser" class="am-btn btn-success" data-id='@userInfo.UserInfoID'><span>关注</span><div id="userid" hidden>@userInfo.UserInfoID</div></button>
                                            }
                                            else
                                            {
                                                <button class="am-btn am-btn-primary" disabled><span>已关注</span></button>

                                            }
                                        }

                                        <p class="aw-title">
                                            <a href="#" id="showUserDetail" data-id='@userInfo.UserInfoID'>@userInfo.UserName / @userInfo.UserEmail</a>
                                        </p>

                                        <p class="aw-article-content">
                                            @if (!string.IsNullOrEmpty(userInfo.UserInfoComment))
                                            {
                                                <span>
                                                    简介： @userInfo.UserInfoComment
                                                </span>
                                            }
                                            else
                                            {
                                                <span>
                                                    简介： 这个用户还没来得及给自己写简介呢。
                                                </span>
                                            }

                                        </p>
                                    </div>
                                }

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>